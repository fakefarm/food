<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @list.name %>
</p>

<% @products.each do |p| %>
  <%= form_for @item do |f| %>
    <%= f.hidden_field :product_id, value: p.id %>
    <%= f.hidden_field :list_id, value: params[:id] %>
    <%= f.submit p.name %>
  <% end %>
<% end %>

